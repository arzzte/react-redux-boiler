@import '../../lib/fonts.styl';

body {
	padding: 0;
	margin: 0;
	ffm();
	font-weight: normal;
}

a {
	text-decoration: none;
	color: black;
}

html {
	font-size: 16px;

	@media screen and (max-width: 1439px) {
		font-size: 14px;
	}

	@media screen and (max-width: 1279px) {
		font-size: 12px;
	}

	@media screen and (max-width: 768px) {
		font-size: 16px;
	}
}